@inherits LayoutComponentBase

<div class="d-flex flex-column">
    <div class="d-flex justify-content-center fixed-top">
        <Header />
    </div>
    <div class="d-flex justify-content-center mt-5 pt-5 mb-5 pb-2">
        <AuthorizeView>
            <Authorized>
                <NavItem Title="account" Href="/account/manage" Icon="aperture" />
                @Body
            </Authorized>
            <NotAuthorized>
                <NavItem Title="register" Href="/register" Icon="flag" />
                <NavItem Title="login" Href="/login" Icon="account-login" />
            </NotAuthorized>
        </AuthorizeView>
    </div>
    <div class="d-flex justify-content-center">
        @*<Contact />*@
    </div>
    <div class="d-flex justify-content-center">
        <Footer />
    </div>
</div>

